{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"RequireObjectCoercible",
				"Call",
				"GetIntrinsic",
				"GetIteratorFromMethod",
				"GetSetRecord",
				"IteratorClose",
				"IteratorStep",
				"IteratorValue",
				"NormalCompletion",
				"SetDataSize",
				"ToBoolean",

				// GetSetRecord
				"IsCallable",
				"ToIntegerOrInfinity",
				"Get",
				"ToNumber",
				"Type",
			],
		}],
		"object-curly-newline": "off",
		"sort-keys": "off",
	},

	"overrides": [
		{
			"files": "test/**/*",
			"rules": {
				"max-lines-per-function": 0,
				"max-params": 0,
			},
		},
	],
}
